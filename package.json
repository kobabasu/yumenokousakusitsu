{
  "name": "gulp-app",
  "version": "0.0.1",
  "description": "gulp minimum app",
  "main": "./gulpfile.js",
  "repository": {
    "type": "git",
    "url": "//github.com/kobabasu/micro-gulp.git"
  },

  "keywords": [
    "gulp",
    "gulp-shell",
    "run-sequence"
  ],
  "os": [
    "darwin",
    "linux",
    "!win32"
  ],

  "dependencies": {
  },
  "devDependencies": {
    "babel-core": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "babelify": "*",
    "gulp": "*",
    "run-sequence": "*",

    "protractor": "*",

    "react": "*",
    "react-dom": "*",
    "react-router": "1.0.0-rc4",
    "react-document-title": "*",
    "object-assign": "*",
    "keymirror": "*",
    "moment": "*",
    "clone": "*",
    "history": "*",
    "flux": "*"
  },

  "browser": {
  },
  "browserify": [ "js", "jsx" ],
  "eslintConfig": {
    "parser": "babel-eslint"
  },

  "scripts": {
    "setup": "mkdir ./{js,dist,css,docs,img}; touch index.html",
    "postinstall": "webdriver-manager update; node_modules/protractor/bin/webdriver-manager update;",
    "start": "NODE_ENV=development NODE_PATH=gulp",

    "babel": "babel ./src --out-dir ./js --presets [es2015, react]",
    "browserify": "browserify -d --compact false ./js/app.js > ./dist/build.js -t [ babelify --presets [ es2015 react ] ]",
    "watch:src": "gulp watch:src",
    "build:src": "npm run babel; npm run browserify",

    "sass": "sassc -M ./sass/style.sass > ./css/style.css -m ./css/style.css",
    "sass:min": "sassc -t compressed -M ./sass/style.sass > ./css/style.min.css -m ./css/style.min.css",
    "doc:sass": "styledocco -n 'micro-sass' -o ./docs/sass --preprocessor 'sass' ./sass/*.sass ./sass/*.scss ./sass/**/*.sass",
    "doc:pages": "styledocco -n 'pages' -o ./docs/pages --preprocessor 'sass' ./sass/pages/*.sass ./sass/pages/**/*.sass",
    "doc:layouts": "styledocco -n 'layouts' -o ./docs/layouts --preprocessor 'sass' ./sass/layouts/*.sass ./sass/layouts/**/*.sass",
    "build:sass": "npm run sass; npm run doc:sass; npm run doc:pages; npm run doc:layouts",

    "clean:git": "find . -type d -name .git -print0 | xargs -0 rm -fr",

    "watch": "gulp watch",
    "build": "gulp build"
  },

  "preferGlobal": true,
  "author": "kobabasu",
  "license": "MIT"
}
